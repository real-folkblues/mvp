{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/lib/data.jsx",
    "app/api/components/Server.jsx",
    "app/api/components/Client.jsx",
    "app/api/blogs/error.js",
    "app/api/blogs/layout.js",
    "app/api/blogs/route.js",
    "app/pages-components/api/clientSearch.jsx",
    "app/pages-components/api/kanjiSearch.jsx",
    "app/global-error.jsx",
    "app/layout.tsx",
    "app/_page.jsx",
    "app/api/server/page.jsx",
    "app/pages-components/login-router/Form.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}